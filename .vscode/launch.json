{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug QEMU Bootloader (16-bit)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/lan_os",
            "miDebuggerServerAddress": "",
            "miDebuggerPath": "/usr/bin/gdb-multiarch",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Start QEMU Debug Server",
            "postDebugTask": "Stop QEMU Debug Server",
            "setupCommands": [
                {
                    "description": "Set disassembly flavor",
                    "text": "set disassembly-flavor intel",
                    "ignoreFailures": true
                },
                {
                    "description": "Set architecture to i386:x86-64",
                    "text": "set architecture i386:x86-64",
                    "ignoreFailures": true
                },
                {
                    "description": "Connect to remote target",
                    "text": "target remote localhost:1234",
                    "ignoreFailures": false
                },
                // {
                //     "description": "Set breakpoint at 0x7c00",
                //     "text": "b *0x7c00",
                //     "ignoreFailures": false
                // },
                {
                    "description": "Set breakpoint at check_a20_valid",
                    "text": "b *0x134d",
                    "ignoreFailures": true
                },
                {
                    "description": "Set breakpoint at lan_main",
                    "text": "b *0x1390",
                    "ignoreFailures": true
                }
            ],
            "stopAtEntry": false,
            "externalConsole": false,
            "MIMode": "gdb"
        }
    ]
}

